<div class="row justify-content-center text-white">
  <div class="col-10">
    <%= render 'shared/display_errors', obj: @article %>

    <%= form_with model: @article, class: 'shadow p-3 mb-3 bg-info rounded', local: true do |f| %>
      <div class="form-group row my-3">
        <%= f.label :title, class: 'col-2 col-form-label' %>
        <div class="col-10">
          <%= f.text_field :title, class: 'form-control shadow rounded', placeholder: 'Title of Article' %>
        </div>
      </div>
      <div class="form-group row my-3">
        <%= f.label :description, class: 'col-2 col-form-label' %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded', placeholder: 'Description of Article'%>
        </div>
      </div>
      <div class="form-group row my-3">
        <%= f.label :category, class: 'col-2 col-form-label' %>
        <div class="col-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: 'Make your selection from the list below (can be empty)'}, {multiple: true, size: 3, class: 'custom-select shadow rounded'}) %>
        </div>
      </div>
      <div class="form-group row my-3 justify-content-center">
        <button class="btn mt-3" type="button">
          <%= f.submit "#{form_action} Article", class: 'btn btn-outline-light btn-md' %>
        </button>
      </div>
    <% end %>
  </div>
  <%= link_to '[ Cancel and return ]', articles_path, class: 'text-info text-center mb-3' %>
</div>