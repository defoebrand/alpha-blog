<h1 class="text-center mt-4">Create a new category</h1>
<div class="row justify-content-center text-white">
  <div class="col-10">
    <%= render 'shared/display_errors', obj: @category %>

    <%= form_with model: @category, class: 'shadow p-3 mb-3 bg-info rounded', local: true do |f| %>
      <div class="form-group row my-3">
        <%= f.label :name, "Category name", class: 'col-2 col-form-label' %>
        <div class="col-10">
          <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter a Name' %>
        </div>
      </div>
      <div class="form-group row my-3 justify-content-center">
        <button class="btn mt-3" type="button">
          <%= f.submit class: 'btn btn-outline-light btn-md' %>
        </button>
      </div>
    <% end %>
  </div>
  <%= link_to '[ Cancel and return ]', articles_path, class: 'text-info text-center mb-3' %>
</div>